<header class="item-header">
    <img class="profile-img"
        data-action="editImage"
        src="{{img}}"
        data-edit="img"
        title="{{name}}"
        alt="Item Image" />
    <div class="header-fields">
        <input class="itemname"
            name="name"
            type="text"
            value="{{name}}"
            placeholder="{{localize 'WOD5E.Name'}}"/>
        <div class="flexrow -gap-xl">
            <div class="level item-resource">
                <div class="form-group">
                    <label>
                        {{localize "WOD5E.EquipmentList.Quantity"}}
                    </label>
                    <input
                        name="system.quantity"
                        value="{{quantity}}"
                        type="number"
                        min="0"/>
                </div>
            </div>
            <div class="level item-resource">
                <div class="form-group">
                    <label>
                        {{localize "WOD5E.EquipmentList.ArmorValue"}}
                    </label>
                    <input
                        name="system.armorvalue"
                        value="{{armorvalue}}"
                        type="number"
                        min="0"/>
                </div>
            </div>
        </div>
    </div>
</header>
