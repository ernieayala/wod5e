<div class="flexcol">
    <div class="resource coterie">
        <label class="resource-label"
            for="system.chasse.value">
            {{localize "WOD5E.VTM.Chasse"}}
        </label>
        <div class="resource-content">
            <div class="resource-value"
                data-value="{{chasse.value}}"
                data-name="system.chasse.value">
                <span class="resource-value-empty"
                    data-action="dotCounterEmpty"></span>
                {{#numLoop 5}}
                    <span class="resource-value-step"
                        data-action="dotCounterChange"
                        data-index="{{this}}"></span>
                {{/numLoop}}
            </div>
        </div>
    </div>
</div>
