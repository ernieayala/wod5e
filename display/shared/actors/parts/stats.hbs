<section class="tab {{tab.cssClass}}"
    data-tab="{{tab.id}}"
    data-group="{{tab.group}}">
    <div class="skills-attributes">
        <div class="resource-label-fancy">
            <hr/ >
            <label class="resource-label">
                {{localize "WOD5E.AttributesList.Attributes"}}
            </label>
            <hr/ >
        </div>
        <div class="flexcol stats-container attributes">
            <div class="flexrow field-headers">
                <div class="field-header">
                    {{localize "WOD5E.SPC.Physical"}}
                </div>
                <div class="field-header">
                    {{localize "WOD5E.SPC.Social"}}
                </div>
                <div class="field-header">
                    {{localize "WOD5E.SPC.Mental"}}
                </div>
            </div>
            <div class="flexrow stats-content">
                {{#each sortedAttributes as |type key|}}
                    <div class="stats-list attributes">
                        {{#each type as |attribute key|}}
                            <div class="flexrow attribute">
                                <label class="resource-label rollable"
                                    for="actor.system.attributes.{{attribute.id}}.value"
                                    data-action="roll"
                                    data-value-paths="attributes.{{attribute.id}}.value"
                                    data-select-dialog="true"
                                    data-attribute="{{attribute.id}}">
                                    {{attribute.displayName}}
                                </label>
                                {{#if ../../settings.skillAttributeInputs}}
                                    {{#if ../../locked}}
                                        <b>
                                            {{attribute.value}}
                                        </b>
                                    {{else}}
                                        <input class="resource-value skill-attribute-input"
                                            name="system.attributes.{{attribute.id}}.value"
                                            type="number"
                                            value="{{attribute.value}}"/>
                                    {{/if}}
                                {{else}}
                                    <div class="resource-value"
                                        data-value="{{attribute.value}}"
                                        data-name="system.attributes.{{attribute.id}}.value">
                                        <span class="resource-value-empty"
                                            data-action="dotCounterEmpty"></span>
                                        {{#numLoop 5}}
                                            <span class="resource-value-step"
                                                data-action="dotCounterChange"
                                                data-index="{{this}}"></span>
                                        {{/numLoop}}
                                    </div>
                                {{/if}}
                            </div>
                        {{/each}}
                    </div>
                {{/each}}
            </div>
        </div>
        <div class="resource-label-fancy">
            <hr/ >
            <label class="resource-label">
                {{localize "WOD5E.SkillsList.Skills"}}
            </label>
            <hr/ >
        </div>
        <div class="flexcol flexrow stats-container skills">
            <div class="flexrow field-headers">
                <div class="field-header">{{localize "WOD5E.SPC.Physical"}}</div>
                <div class="field-header">{{localize "WOD5E.SPC.Social"}}</div>
                <div class="field-header">{{localize "WOD5E.SPC.Mental"}}</div>
            </div>
            <div class="flexrow stats-content">
                {{#each sortedSkills as |type key|}}
                    <div class="stats-list skills">
                        {{#each type as |skill key|}}
                            <div class="flexrow skill">
                                <a class="edit-skill"
                                    data-action="editSkill"
                                    title="Edit skill"
                                    data-skill="{{skill.id}}">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <label class="resource-label">
                                    <div  class="rollable{{#if skill.bonuses}} specialty-available{{/if}}"
                                        for="actor.system.skills.{{skill.id}}.value"
                                        data-action="roll"
                                        data-value-paths="skills.{{skill.id}}.value"
                                        data-skill="{{skill.id}}"
                                        data-select-dialog="true"
                                        data-use-flavor-path="true"
                                        data-flavor-path="skills.{{skill.id}}.description"
                                        data-macroid="{{skill.macroid}}">
                                        {{skill.displayName}}
                                    </div>
                                    {{#if hasSpecialties}}
                                        <label class="specialty"
                                            title="{{localize "WOD5E.SkillsList.Specialties"}}:{{#each skill.specialtiesList as |bonus|}} {{bonus}}{{#unless @last}},{{/unless}}{{/each}}">
                                            S
                                        </label>
                                    {{/if}}
                                </label>
                                {{#if ../../settings.skillAttributeInputs}}
                                    {{#if ../../locked}}
                                        <b>
                                            {{skill.value}}
                                        </b>
                                    {{else}}
                                        <input class="resource-value skill-attribute-input"
                                            name="system.skills.{{skill.id}}.value"
                                            type="number"
                                            value="{{skill.value}}"/>
                                    {{/if}}
                                {{else}}
                                    <div class="resource-value"
                                        data-value="{{skill.value}}"
                                        data-name="system.skills.{{skill.id}}.value">
                                        <span class="resource-value-empty"
                                            data-action="dotCounterEmpty"></span>
                                        {{#numLoop 5}}
                                            <span class="resource-value-step"
                                                data-action="dotCounterChange"
                                                data-index="{{this}}"></span>
                                        {{/numLoop}}
                                    </div>
                                {{/if}}
                            </div>
                        {{/each}}
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
    <div class="side-panel">
        {{#if conditions.length}}
        <div class="stat-panel-section">
            <div class="resource-label-fancy">
                <hr/ >
                <label class="resource-label">
                    {{localize "WOD5E.ItemsList.Conditions"}}
                </label>
                <hr/ >
            </div>
            <div class="stats-container">
                <div class="items-list flexcol">
                    {{#each conditions as |condition id|}}
                        <div class="item{{#if condition.system.suppressed}} suppressed{{/if}}"
                            data-drag="true"
                            data-item-id="{{condition.id}}"
                            data-document-uuid="{{condition.uuid}}"
                            data-type="Item">
                            <div class="item-name system-hover -red"
                                data-action="itemChat"
                                data-item-id="{{condition._id}}">
                                {{condition.name}}
                            </div>
                            <div class="item-controls">
                                <a class="item-control item-edit"
                                    data-action="itemEdit"
                                    data-item-id="{{condition._id}}"
                                    title="{{localize 'WOD5E.Edit'}}">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="item-control item-delete"
                                    data-action="itemDelete"
                                    data-item-id="{{condition._id}}"
                                    title="{{localize 'WOD5E.Delete'}}">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    {{/each}}
                </div>
                <button class="item-create"
                    data-action="createItem"
                    title="{{localize 'WOD5E.Add'}}"
                    data-type="condition">
                    <i class="fas fa-plus"></i> {{localize "WOD5E.Add"}}
                </button>
            </div>
        </div>
        {{/if}}
        {{#if customRolls.length}}
            <div class="stat-panel-section">
                <div class="resource-label-fancy">
                    <hr/ >
                    <label class="resource-label">
                        {{localize "WOD5E.ItemsList.CustomRolls"}}
                    </label>
                    <hr/ >
                </div>
                <div class="stats-container">
                    <div class="items-list flexcol">
                        {{#each customRolls as |roll id|}}
                            <div class="item"
                                data-drag="true"
                                data-item-id="{{roll.id}}"
                                data-document-uuid="{{roll.uuid}}"
                                data-type="Item">
                                <div class="item-name system-hover -red"
                                    data-action="rollItem"
                                    data-item-uuid="{{roll.uuid}}">
                                    {{roll.name}}
                                </div>
                                <div class="item-controls">
                                    <a class="item-control item-edit"
                                        data-action="itemEdit"
                                        data-item-id="{{roll._id}}"
                                        title="{{localize 'WOD5E.Edit'}}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="item-control item-delete"
                                        data-action="itemDelete"
                                        data-item-id="{{roll._id}}"
                                        title="{{localize 'WOD5E.Delete'}}">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                    <button class="item-create"
                        data-action="createItem"
                        title="{{localize 'WOD5E.Add'}}"
                        data-type="customRoll">
                        <i class="fas fa-plus"></i> {{localize "WOD5E.Add"}}
                    </button>
                </div>
            </div>
        {{/if}}
    </div>
</section>
