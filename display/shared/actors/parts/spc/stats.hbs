<section class="tab {{tab.cssClass}}"
    data-tab="{{tab.id}}"
    data-group="{{tab.group}}">
    <div class="spc-stats-body">
        <div class="flexrow -gap-xl">
            {{> "systems/vtm5e/display/shared/actors/parts/spc/standard-dice-pools.hbs"}}
            {{> "systems/vtm5e/display/shared/actors/parts/spc/exceptional-dice-pools.hbs"}}
        </div>

        {{#if showDisciplines}}
            {{> "systems/vtm5e/display/shared/actors/parts/spc/spc-disciplines.hbs"}}
        {{/if}}

        {{#if showGifts}}
            {{> "systems/vtm5e/display/shared/actors/parts/spc/spc-gifts.hbs"}}
        {{/if}}

        {{#if showEdges}}
            {{> "systems/vtm5e/display/shared/actors/parts/spc/spc-edges.hbs"}}
        {{/if}}

        {{#ifeq currentActorType 'spirit'}}
            <div class="description-field">
                <div class="flex-center field-header">
                    <label class="resource-label">
                        {{localize "WOD5E.WTA.PossessionManifestation"}}
                    </label>
                </div>
                <div class="description-content resource">
                    <prose-mirror name="system.manifestation" value="{{manifestation}}"
                        toggled="true" compact="true">
                        {{{enrichedManifestation}}}
                    </prose-mirror>
                </div>
            </div>
        {{/ifeq}}

        <div class="description-field">
            <div class="resource-label-fancy">
                <hr/ >
                <label class="resource-label">
                    {{localize "WOD5E.SPC.Traits"}}
                </label>
                <hr/ >
            </div>
            <div class="flexcol -gap-base">
                <div class="items-list flexcol">
                    {{#each traits as |trait id|}}
                        <div class="item flexrow"
                            data-drag="true"
                            data-item-id="{{trait.id}}"
                            data-document-uuid="{{trait.uuid}}"
                            data-type="Item">
                            {{#ifgr trait.system.dice 0}}
                                <div class="item-name system-hover -red"
                                    data-action="roll"
                                    data-use-absolute-value="true"
                                    data-absolute-value="{{trait.system.dice}}"
                                    data-select-dialog="false"
                                    data-label="{{exceptionalskill.displayName}}"
                                    {{#if ../noAdvancedDice}}data-disable-advanced-dice="true"{{/if}}>
                                    {{trait.name}}
                                </div>
                            {{else}}
                                <div class="item-name system-hover -red"
                                    data-action="itemChat"
                                    data-item-id="{{trait._id}}">
                                    {{trait.name}}
                                </div>
                            {{/ifgr}}
                            <div class="item-controls">
                                <a class="item-control item-edit"
                                    data-action="itemEdit"
                                    data-item-id="{{trait._id}}"
                                    title="{{localize 'WOD5E.Edit'}}">
                                        <i class="fas fa-edit"></i>
                                </a>
                                <a class="item-control item-delete"
                                    data-action="itemDelete"
                                    data-item-id="{{trait._id}}"
                                    title="{{localize 'WOD5E.Delete'}}">
                                        <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    {{/each}}
                </div>
                <button class="item-create"
                    data-action="createItem"
                    title="{{localize 'WOD5E.Add'}}"
                    data-type="trait">
                    <i class="fas fa-plus"></i> {{localize "WOD5E.Add"}}
                </button>
            </div>
        </div>
        <div class="description-field">
            <div class="resource-label-fancy">
                <hr/ >
                <label class="resource-label">
                    {{localize "WOD5E.ItemsList.Conditions"}}
                </label>
                <hr/ >
            </div>
            <div class="flexcol -gap-base">
                <div class="items-list flexcol">
                    {{#each conditions as |condition id|}}
                        <div class="item flexrow"
                            data-drag="true"
                            data-item-id="{{condition.id}}"
                            data-document-uuid="{{condition.uuid}}"
                            data-type="Item">
                            <div class="item-name system-hover -red"
                                data-action="itemChat"
                                data-item-id="{{condition._id}}">
                                {{condition.name}}
                            </div>
                            <div class="item-controls">
                                <a class="item-control item-edit"
                                    data-action="itemEdit"
                                    data-item-id="{{condition._id}}"
                                    title="{{localize 'WOD5E.Edit'}}">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="item-control item-delete"
                                    data-action="itemDelete"
                                    data-item-id="{{condition._id}}"
                                    title="{{localize 'WOD5E.Delete'}}">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    {{/each}}
                </div>
                <button class="item-create"
                    data-action="createItem"
                    title="{{localize 'WOD5E.Add'}}"
                    data-type="condition">
                    <i class="fas fa-plus"></i> {{localize "WOD5E.Add"}}
                </button>
            </div>
        </div>
    </div>
</section>
