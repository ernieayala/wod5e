<section class="tab {{tab.cssClass}}"
    data-tab="{{tab.id}}"
    data-group="{{tab.group}}">
    <div class="modifiers-list">
        {{#each bonuses as |bonus key|}}
            <div class="modifier">
                <h3 class="flexrow -gap-sm form-header">
                    <span>
                        {{bonus.source}}
                    </span>
                    <a class="flex0 edit-bonus"
                        title="Edit bonus"
                        data-action="editModifier"
                        data-bonus-path="skills.{{../id}}.bonuses"
                        data-bonus="{{key}}">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="flex0 delete-bonus"
                        title="Delete bonus"
                        data-action="deleteModifier"
                        data-bonus-path="skills.{{../id}}.bonuses"
                        data-bonus="{{key}}">
                        <i class="fas fa-trash"></i>
                    </a>
                </h3>
                <div class="form-group">
                    <label>{{localize "WOD5E.Value"}}</label>
                    <div class="form-fields">
                        <input
                            name="value"
                            type="number"
                            value="{{bonus.value}}"
                            disabled="true"/>
                    </div>
                </div>
                <div class="form-group">
                    <label>{{localize "WOD5E.Modifier.Unless"}}</label>
                    <div class="form-fields">
                        <input
                            name="path"
                            type="text"
                            value="{{bonus.unless}}"
                            placeholder="{{localize 'WOD5E.Modifier.Unless'}}"
                            disabled="true"/>
                    </div>
                </div>
                <div class="form-group">
                    <label>{{localize "WOD5E.Modifier.DisplayWhenInactive"}}</label>
                    <div class="form-fields">
                        <input
                            name="displayWhenInactive"
                            type="checkbox"{{#if bonus.displayWhenInactive}} checked{{/if}}
                            disabled="true"/>
                    </div>
                </div>
                <div class="form-group">
                    <label>{{localize "WOD5E.Modifier.ActiveWhen"}}</label>
                    <div class="form-fields">
                        <select
                            name="check"
                            type="number">
                            <option value="never"{{#ifeq bonus.activeWhen.check "never"}} selected{{/ifeq}} disabled="true">{{localize 'WOD5E.Modifier.Never'}}</option>
                            <option value="always"{{#ifeq bonus.activeWhen.check "always"}} selected{{/ifeq}} disabled="true">{{localize 'WOD5E.Modifier.Always'}}</option>
                            <option value="isEqual"{{#ifeq bonus.activeWhen.check "isEqual"}} selected{{/ifeq}} disabled="true">{{localize 'WOD5E.Modifier.IfEquals'}}</option>
                            <option value="isPath"{{#ifeq bonus.activeWhen.check "isPath"}} selected{{/ifeq}} disabled="true">{{localize 'WOD5E.Modifier.IfPathIs'}}</option>
                        </select>
                    </div>
                </div>
                {{#ifeq bonus.activeWhen.check 'isEqual'}}
                    <div class="form-group">
                        <label>{{localize "WOD5E.Modifier.PathToCheck"}}</label>
                        <div class="form-fields">
                            <input
                                name="path"
                                type="text"
                                value="{{bonus.activeWhen.path}}"
                                placeholder="{{localize 'WOD5E.Modifier.PathToCheck'}}"
                                disabled="true"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>{{localize "WOD5E.Modifier.ValueToCheck"}}</label>
                        <div class="form-fields">
                            <input
                                name="value"
                                type="text"
                                value="{{bonus.activeWhen.value}}"
                                placeholder="{{localize 'WOD5E.Modifier.ValueToCheck'}}"
                                disabled="true"/>
                        </div>
                    </div>
                {{else if (eq bonus.activeWhen.check "isPath")}}
                    <div class="form-group">
                        <label>{{localize "WOD5E.Modifier.PathToCheck"}}</label>
                        <div class="form-fields">
                            <input
                                name="path"
                                type="text"
                                value="{{bonus.activeWhen.path}}"
                                placeholder="{{localize 'WOD5E.Modifier.PathToCheck'}}"
                                disabled="true"/>
                        </div>
                    </div>
                {{/ifeq}}
                </div>
                <div class="form-group">
                    <label>{{localize "WOD5E.Modifier.Selectors"}}</label>
                    <div class="form-fields">
                        <input class="modifier-selectors"
                            name="paths"
                            type="text"
                            value="{{splitArray bonus.paths}}"
                            placeholder="{{localize 'WOD5E.None'}}"
                            disabled="true"/>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
    <hr>
    <button class="add-bonus"
        data-action="addModifier"
        data-skill="{{id}}"
        data-bonus-path="skills.{{id}}.bonuses">
        {{localize "WOD5E.Modifier.AddNewModifier"}}
    </button>
</section>
