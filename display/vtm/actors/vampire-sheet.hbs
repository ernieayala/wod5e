<form class="{{cssClass}} flexcol {{#if locked}}locked{{/if}} vampire-sheet" autocomplete="off">
  {{!-- Vampire Sheet Header --}}
  <header class="actor-header">
      <div class="header-fields-top">
        <div class="header-rows-top">
            <div class="header-row-1">
                <div class="flexcol">
                  {{> "systems/vtm5e/display/shared/actors/parts/profile-img.hbs"}}
                </div>
                <div class="flexcol">
                  <h1 class="charname">
                    <input
                      class="no-border"
                      name="name"
                      type="text"
                      value="{{actor.name}}"
                      placeholder="{{localize 'WOD5E.Name'}}" />
                    <span>{{actor.name}}</span>
                  </h1>

                  <div class="header-info-group">
                    <input
                      class="no-border"
                      name="system.clan.value"
                      type="text"
                      value="{{actor.system.clan.value}}"
                      placeholder="{{localize 'WOD5E.VTM.Clan'}}" />
                    <input
                      class="no-border"
                      name="system.headers.generation"
                      type="text"
                      value="{{actor.system.headers.generation}}"
                      placeholder="{{localize 'WOD5E.VTM.Generation'}}" />
                    <input
                      class="no-border"
                      name="system.headers.predator"
                      type="text"
                      value="{{actor.system.headers.predator}}"
                      placeholder="{{localize 'WOD5E.VTM.Predator'}}" />
                    <span>{{actor.system.clan.value}}</span>
                    <span>&#8226;</span>
                    <span>{{actor.system.headers.generation}}</span>
                    <span>&#8226;</span>
                    <span>{{actor.system.headers.predator}}</span>
                  </div>
                </div>
                <div class="flexrow header-elements">
                  {{> "systems/vtm5e/display/vtm/actors/parts/rouse.hbs"}}
                  {{> "systems/vtm5e/display/vtm/actors/parts/frenzy.hbs"}}
                  {{> "systems/vtm5e/display/shared/actors/parts/exp.hbs"}}
                </div>
            </div>
            <div class="header-row-2">
                <div class="flexcol">
                  {{> "systems/vtm5e/display/shared/actors/parts/health.hbs"}}
                  {{> "systems/vtm5e/display/shared/actors/parts/willpower.hbs"}}
                </div>
                <div class="flexcol">
                  {{> "systems/vtm5e/display/vtm/actors/parts/humanity.hbs"}}
                  {{> "systems/vtm5e/display/vtm/actors/parts/hunger.hbs"}}
                </div>

                <div class="flexcol">
                  <div class="resource flex-group-center blood-potency">
                      <label class="resource-label">{{localize "WOD5E.VTM.BloodPotency"}}</label>
                      <div class="resource-value" data-value="{{actor.system.blood.potency}}" data-name="system.blood.potency">
                          <span class="resource-value-empty"></span>
                          {{#numLoop 5}}
                          <span class="resource-value-step" data-index="{{this}}"></span>
                          {{/numLoop}}
                      </div>
                  </div>
                  <div class="resource flex-group-center blood-resonance">
                      <label class="resource-label">{{localize "WOD5E.VTM.BloodResonance"}}</label>
                      <input type="text" name="system.blood.resonance" value="{{actor.system.blood.resonance}}" placeholder="{{localize 'WOD5E.VTM.BloodResonance'}}" />
                  </div>
                </div>
            </div>
        </div>
    </div>
  </header>

  {{!-- Vampire Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
      <div class="item" data-tab="stats">{{localize "WOD5E.Tabs.Stats"}}</div>
      <div class="item" data-tab="disciplines">{{localize "WOD5E.VTM.Disciplines"}}</div>
      <div class="item" data-tab="features">{{localize "WOD5E.Tabs.Features"}}</div>
      <div class="item" data-tab="blood">{{localize "WOD5E.VTM.Blood"}}</div>
      <div class="item" data-tab="description">{{localize "WOD5E.Tabs.Description"}}</div>
      <div class="item" data-tab="other">{{localize "WOD5E.Tabs.Other"}}</div>
  </nav>

  {{!-- Vampire Sheet Body --}}
  <section class="sheet-body">
      {{!-- Stats Tab --}}
      {{> "systems/vtm5e/display/shared/actors/parts/stats.hbs"}}

      {{!-- Owned Powers Tab --}}
      {{> "systems/vtm5e/display/vtm/actors/parts/disciplines.hbs"}}

      {{!-- Owned Features Tab --}}
      {{> "systems/vtm5e/display/shared/actors/parts/features.hbs"}}

      {{!-- Blood Tab --}}
      {{> "systems/vtm5e/display/vtm/actors/parts/blood.hbs"}}

      {{!-- Biography Tab --}}
      {{> "systems/vtm5e/display/shared/actors/parts/biography.hbs"}}

      {{!-- Other Tab --}}
      {{> "systems/vtm5e/display/shared/actors/parts/other.hbs"}}
    </section>
</form>
