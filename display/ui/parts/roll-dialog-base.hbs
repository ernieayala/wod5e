{{> "systems/vtm5e/display/ui/parts/situational-modifiers.hbs"}}
<div class="form-group">
    <label>{{localize 'WOD5E.RollList.Difficulty' }}</label>
    <input
        type="text"
        min="0"
        id="inputDifficulty"
        value="{{difficulty}}">
</div>
<div class="form-group">
    <label>{{localize 'WOD5E.RollList.RollMode'}}</label>
    <select
        name="rollMode"
        data-type="String">
        {{selectOptions rollModes selected=rollMode localize=true}}
    </select>
</div>
