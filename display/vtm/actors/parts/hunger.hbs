<div class="resource hunger">
    <label class="resource-label" title="{{localize 'WOD5E.VTM.Hunger'}}">
        {{localize "WOD5E.VTM.Hunger"}}
    </label>
    <div class="resource-content">
        <div class="resource-value"
            data-value="{{hunger.value}}"
            data-name="system.hunger.value">
            <span class="resource-value-empty hunger-value"
                data-action="dotCounterEmpty"></span>
            {{#numLoop hunger.max}}
                <span class="resource-value-step hunger-value"
                    data-action="dotCounterChange"
                    data-index="{{this}}"></span>
            {{/numLoop}}
        </div>
    </div>
</div>
