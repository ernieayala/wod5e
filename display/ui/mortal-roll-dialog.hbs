<form class="dialog-contents">
    <div class="dice-group-header">
        <label>{{localize 'WOD5E.RollList.MortalDice' }}</label>
    </div>
    <div class="base-dice-group">
        <div class="dice-input">
            <i class="item-control fas fa-minus dialog-control dialog-minus"
                data-resource="inputBasicDice"
                data-resource-action="minus"></i>
            <input
                type="text"
                id="inputBasicDice"
                value="{{basicDice}}">
            <i class="item-control fas fa-plus dialog-control dialog-plus"
                data-resource="inputBasicDice"
                data-resource-action="plus"></i>
        </div>
    </div>
    {{> "systems/vtm5e/display/ui/parts/roll-dialog-base.hbs"}}
</form>
