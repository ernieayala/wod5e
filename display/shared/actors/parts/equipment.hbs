<section class="tab {{tab.cssClass}}"
    data-tab="{{tab.id}}"
    data-group="{{tab.group}}">
    <div class="flexcol -gap-sm">
        <div class="items-list">
            {{#each equipmentItems as |equipment key|}}
                {{#if equipment.length}}
                    <div class="item-header">
                        <div class="item-name">
                            {{localize (concat 'TYPES.Item.' key)}}
                        </div>
                        <div class="item-controls">
                            <a class="item-control item-create"
                                data-action="createItem"
                                title="{{localize 'WOD5E.Add'}}"
                                data-type="{{key}}">
                                <i class="fas fa-plus"></i>
                            </a>
                        </div>
                    </div>
                {{/if}}
                {{#each equipment as |item key|}}
                    <div class="collapsible-container">
                        <div class="flexrow item"
                            data-drag="true"
                            data-item-id="{{item.id}}"
                            data-document-uuid="{{item.uuid}}"
                            data-type="Item">
                            <div class="item-name{{#if item.system.enrichedDescription}} collapsible{{/if}}"
                                {{#if item.system.enrichedDescription}}data-action="toggleCollapse"{{/if}}>
                                    {{item.name}}
                                {{#if item.system.uses.enabled}}
                                    ({{item.system.uses.current}}/{{item.system.uses.max}})
                                {{/if}}
                            </div>
                            <div class="item-controls">
                                {{#if item.system.dicepool}}
                                    {{#if (isNotEmpty item.system.dicepool)}}
                                        <a class="item-image rollable-item"
                                            data-action="rollItem"
                                            data-item-uuid="{{item.uuid}}">
                                            <i class="fa-solid fa-dice-d10"></i>
                                        </a>
                                    {{/if}}
                                {{/if}}
                                {{#if item.system.uses.enabled}}
                                    <a class="item-control item-use"
                                        data-action="expendItemUse"
                                        data-item-id="{{item._id}}" title="{{localize 'WOD5E.ItemsList.ExpendUse'}}">
                                        <i class="fa-solid fa-angle-down"></i>
                                    </a>
                                    <a class="item-control item-restore"
                                        data-action="restoreItemUses"
                                        data-item-id="{{item._id}}"
                                        title="{{localize 'WOD5E.ItemsList.ResetUses'}}">
                                        <i class="fa-solid fa-rotate-left"></i>
                                    </a>
                                {{/if}}
                                <a class="item-control item-edit"
                                    data-action="itemEdit"
                                    data-item-id="{{item._id}}"
                                    title="{{localize 'WOD5E.Edit'}}">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="item-control item-delete"
                                    data-action="itemDelete"
                                    data-item-id="{{item._id}}"
                                    title="{{localize 'WOD5E.Delete'}}">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                        <div class="collapsible-content item-description">
                            {{{item.system.enrichedDescription}}}
                        </div>
                    </div>
                {{/each}}
            {{/each}}
        </div>
        <div class="flexcol -gap-sm">
            <div class="subtle-header">
                <span>
                    {{localize "WOD5E.EquipmentList.EquipmentNotes"}}
                </span>
            </div>
            <div class="flexrow -gap-sm">
                <div class="flexcol detail-row">
                    <prose-mirror
                        name="system.equipment"
                        value="{{equipment}}"
                        toggled="true"
                        compact="true">
                            {{{enrichedEquipment}}}
                        </prose-mirror>
                </div>
            </div>
        </div>
    </div>
</section>
