<div class="tab"
    data-group="primary">
    <div class="resource-label-fancy">
        <hr/ >
        <label class="resource-label">
            {{localize "WOD5E.VTM.Disciplines"}}
            <a class="item-control item-create"
                data-action="createSPCPower"
                title="{{localize 'WOD5E.VTM.AddDiscipline'}}"
                data-type="discipline">
                <i class="fas fa-plus"></i>
            </a>
        </label>
        <hr/ >
    </div>
    <div class="flexcol">
        <div class="items-list">
            {{#if locked}}
                {{#each disciplines as |discipline key|}}
                    {{#if discipline.visible}}
                        <div class="item-header">
                            <label class="item-name system-rollable -red"
                                for="{{discipline.name}}"
                                data-action="roll"
                                data-use-absolute-value="true"
                                data-absolute-value="{{discipline.value}}"
                                data-label="{{generateLocalizedLabel key 'disciplines'}}"
                                data-selectors="disciplines disciplines.{{key}}
                                {{#if ../noAdvancedDice}} data-disable-advanced-dice="true"{{/if}}>
                                {{generateLocalizedLabel key 'disciplines'}}
                            </label>
                            <div class="resource-value"
                                data-value="{{discipline.value}}"
                                data-name="system.disciplines.{{key}}.value">
                                {{#numLoop discipline.value}}
                                    <span class="resource-value-step"
                                        data-index="{{this}}"></span>
                                {{/numLoop}}
                            </div>
                            <div class="item-controls">
                                <a class="item-control item-delete"
                                    data-action="deleteSPCPower"
                                    title="{{localize 'WOD5E.Delete'}}"
                                    data-id="{{key}}"
                                    data-type="discipline">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            {{else}}
                {{#each disciplines as |discipline key|}}
                    {{#if discipline.visible}}
                        <div class="item-header">
                            <label class="item-name system-rollable -red"
                                for="{{discipline.name}}"
                                data-action="roll"
                                data-use-absolute-value="true"
                                data-absolute-value="{{discipline.value}}"
                                data-label="{{generateLocalizedLabel key 'disciplines'}}"
                                data-selectors="disciplines disciplines.{{key}}
                                {{#if ../noAdvancedDice}}data-disable-advanced-dice="true"{{/if}}>
                                {{generateLocalizedLabel key 'disciplines'}}
                            </label>
                            <div class="resource-value">
                                <input
                                    type="number"
                                    name="system.disciplines.{{key}}.value"
                                    value="{{discipline.value}}"
                                    data-name="system.disciplines.{{key}}.value"/>
                            </div>
                            <div class="item-controls">
                                <a class="item-control item-delete"
                                    data-action="deleteSPCPower"
                                    title="{{localize 'WOD5E.Delete'}}"
                                    data-id="{{key}}"
                                    data-type="discipline">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            {{/if}}
        </div>
    </div>
</div>
