<div class="form-group">
    <label class="field-header flexrow">
        {{localize 'WOD5E.ItemsList.ItemUsesEnabled'}}
    </label>
    <div class="form-fields">
        <input
            type="checkbox"
            name="system.uses.enabled"{{#if uses.enabled}} checked{{/if}}/>
    </div>
</div>

{{#if uses.enabled}}
    <div class="form-group">
        <label class="field-header flexrow">
            {{localize 'WOD5E.ItemsList.MaxUses'}}
        </label>
        <div class="form-fields">
            <input
                type="number"
                name="system.uses.max"
                value="{{uses.max}}"/>
        </div>
    </div>
{{/if}}
